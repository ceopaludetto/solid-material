---
import { Card } from "@solidjs-material/core";
---

<Card class="overflow-hidden" variant="outlined">
  <div class="not-prose flex items-center justify-center gap-x-3 p-5 text-on-surface">
    <slot />
  </div>
  {/* eslint-disable-next-line tailwindcss/no-custom-classname */}
  <div class="code">
    <slot name="code" />
  </div>
</Card>

<style is:global>
  .astro-code {
    @apply rounded-md;
  }

  .code .astro-code {
    @apply m-0;
  }
</style>
